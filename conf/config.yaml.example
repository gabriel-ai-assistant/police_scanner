# config.yaml.example
# Non-secret configuration. Secrets are loaded from environment variables.
# See docs/SECRETS.md for the full list of required env vars.
# Copy this to config.yaml and adjust paths as needed.

broadcastify:
  # URL, playlist_uuid, sessionKey, and cookies are loaded from env vars.
  # Set them in .env (see .env.example).
  headers:
    Accept: '*/*'
    Accept-Language: en-US,en;q=0.9
    Content-Type: application/x-www-form-urlencoded; charset=UTF-8
    Origin: https://www.broadcastify.com
    Referer: https://www.broadcastify.com/calls/playlists/
    User-Agent: Mozilla/5.0 (Windows NT 10.0; Win64; x64)...
    X-Requested-With: XMLHttpRequest
  last_pos: 0

data:
  audio_dir: data/audio
  delete_audio_after_transcribe: true
  seen_calls_file: data/seen_calls.txt
  transcript_dir: data/transcripts

keywords:
  case_sensitive: false
  file: keywords.txt
  min_hits: 1

logging:
  console: true
  level: Debug
  logfile: data/logs/scanner.log

signal:
  # from_number, recipients, and signal_cli_bin are loaded from env vars.
  message_template: '[Police Scanner]

    Keyword(s): {keywords}

    Call ID: {call_id}

    Transcript:

    {transcript}

    '

whisper:
  # model and device are loaded from env vars.
  language: en
