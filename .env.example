# =============================================================================
# Police Scanner - Environment Variables
# Copy to .env and fill in real values. NEVER commit .env to git.
# =============================================================================

# --- Broadcastify ---
BROADCASTIFY_URL=https://www.broadcastify.com/calls/apis/live-calls
BROADCASTIFY_PLAYLIST_UUID=your-playlist-uuid-here
BROADCASTIFY_SESSION_KEY=your-session-key-here
BROADCASTIFY_COOKIE__EOI=your-eoi-cookie
BROADCASTIFY_COOKIE__GADS=your-gads-cookie
BROADCASTIFY_COOKIE__GPI=your-gpi-cookie
BROADCASTIFY_COOKIE_AWL=your-awl-cookie
BROADCASTIFY_POLL_INTERVAL=3

# --- Signal Alerting ---
SIGNAL_FROM_NUMBER=+10000000000
SIGNAL_RECIPIENTS=+10000000001,+10000000002
SIGNAL_CLI_BIN=/opt/scanner/signal-cli/build/install/signal-cli/bin/signal-cli

# --- Whisper ---
WHISPER_MODEL=base
WHISPER_DEVICE=cpu

# --- Logging ---
LOG_LEVEL=Debug
LOG_CONSOLE=true
