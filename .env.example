# =============================================================================
# Police Scanner - Environment Variables
# Copy to .env and fill in real values. NEVER commit .env to git.
# =============================================================================

# --- PostgreSQL (single PG* pattern for all services) ---
PGHOST=postgres
PGPORT=5432
PGUSER=scan
PGPASSWORD=CHANGEME
PGDATABASE=scanner

# --- MinIO ---
MINIO_ENDPOINT=minio:9000
MINIO_ROOT_USER=scanner
MINIO_ROOT_PASSWORD=CHANGEME
MINIO_BUCKET=feeds
MINIO_USE_SSL=false

# --- Redis ---
REDIS_URL=redis://redis:6379/0

# --- Broadcastify ---
BROADCASTIFY_URL=https://www.broadcastify.com/calls/apis/live-calls
BROADCASTIFY_PLAYLIST_UUID=your-playlist-uuid-here
BROADCASTIFY_SESSION_KEY=your-session-key-here
BROADCASTIFY_COOKIE__EOI=your-eoi-cookie
BROADCASTIFY_COOKIE__GADS=your-gads-cookie
BROADCASTIFY_COOKIE__GPI=your-gpi-cookie
BROADCASTIFY_COOKIE_AWL=your-awl-cookie
BROADCASTIFY_POLL_INTERVAL=3
BCFY_API_KEY=your-api-key
BCFY_API_KEY_ID=your-api-key-id
BCFY_APP_ID=your-app-id

# --- Signal Alerting ---
SIGNAL_FROM_NUMBER=+10000000000
SIGNAL_RECIPIENTS=+10000000001,+10000000002
SIGNAL_CLI_BIN=/opt/scanner/signal-cli/build/install/signal-cli/bin/signal-cli

# --- OpenAI (Whisper transcription) ---
OPENAI_API_KEY=your-openai-api-key

# --- Whisper ---
WHISPER_MODEL=base
WHISPER_DEVICE=cpu

# --- MeiliSearch ---
MEILI_MASTER_KEY=CHANGEME

# --- Flower (Celery monitoring) ---
FLOWER_USER=admin
FLOWER_PASSWORD=CHANGEME

# --- SMTP ---
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=Scanner Alerts <alerts@example.com>

# --- Firebase ---
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=

# --- Logging ---
LOG_LEVEL=INFO
LOG_CONSOLE=true
